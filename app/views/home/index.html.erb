<br />

<div class="form-wrapper">
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<%= form_for @parola, url: parola_search_url, remote: true, html: { role: "form", class: "form-horizontal"} do |f| %>

						<h1>Joochify it. <small>Convert your plain vernacular to Jooch-speak.</small></h1>

						<br />

						<div class="row">
							<div class="col-md-10">
									<%= f.text_field :input, placeholder: "Enter a word or phrase to joochify, e.g. calamari", class: "input-lg form-control" %>
							</div>
							<div class="col-md-2">
								<%= f.submit "Joochify it!", class: "btn btn-danger btn-lg", id: "joochify-button" %>
							</div>
						</div>


			<% end %>
		
		</div>
	</div>
	
	<br />
	
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1" id="search-result">
			<div id="search_result_content" class="input-lg"><span class="placeholder">And you will get your result, e.g. galamad</span></div><br />
		</div>
	</div>
	<br />
	
	<div class="row">
		<div class="col-lg-4 col-lg-offset-7">
			<h5 class="pull-right"><%= link_to "Browse word lists by theme", word_lists_url %></h5>
		</div>
	</div>
	
</div>


<div class="row">
	<div class="col-lg-10 col-lg-offset-1">
		
		<%= image_tag "joochify_necklace.png"%>
		
	</div>
</div>




