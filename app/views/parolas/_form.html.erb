<%= form_for @parola, html: {role: "form", class: "form-horizontal"} do |f| %>
  <% if @parola.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@parola.errors.count, "error") %> prohibited this parola from being saved:</h2>

      <ul>
      <% @parola.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :input, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :input, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :output, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :output, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :part_of_speech, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.select :part_of_speech, ["n.", "v.", "adj.", "adv.", "phrase", "det.", "pro." ], {}, { class: "form-control" } %>
    </div>
    <%= f.label :etymology_language, "Etym. Language", class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.select :etymology_language, ["English", "Italian"], {}, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group">

  </div>

  <div class="form-group">
    <%= f.label :definition, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :definition, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit", {class: "btn btn-info"} %>
    </div>
  </div>

<% end %>
