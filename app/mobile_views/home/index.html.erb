<div class="form-wrapper">
	<div class="row">
		<div class="col-xs-12">
			<%= form_for @parola, url: parola_search_url, remote: true, html: { role: "form", class: "form-horizontal"} do |f| %>

						<h1>Joochify it.<br /> <small>Convert your vocab to <br />&quot;gabbagul Italian&quot;.</small></h1>

						<br />

						<div class="row">
							<div class="col-xs-12">
									<%= f.text_field :input, placeholder: "Enter a word to joochify, e.g. calamari", class: "input-sm form-control" %>
							</div>
						</div>
						
						<br />
						
						<div class="row">
							<div class="col-xs-12">
									<%= f.submit "Joochify it!", class: "btn btn-danger btn-sm col-xs-12", id: "joochify-button" %>
							</div>
						</div>

			<% end %>
		
		</div>
	</div>
	
	<br />
	
	<div class="row">
		<div class="col-xs-12" id="search-result">
			<div id="search_result_content"><span class="placeholder">And you will get a result: galamad</span></div><br />
		</div>
	</div>
	<br />
	
	<div class="row">
		<div class="col-xs-10">
			<h5 class="pull-left"><%= link_to "Browse word lists by theme", word_lists_url %></h5>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-10">
			<h5 class="pull-left"><%= link_to "About", about_url %></h5>
		</div>
	</div>
</div>


<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		
		<%= image_tag "joochify_necklace.png"%>
		
	</div>
</div>




